<Application x:Class="Vexa.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="Ink">#333333</Color>
            <Color x:Key="Paper">#FFFFFF</Color>
            <Color x:Key="Panel">#FDFDFD</Color>
            <Color x:Key="Accent">#73A737</Color> <!-- Green for Submit/Save -->
            <Color x:Key="AccentSoft">#EEEEEE</Color>
            <Color x:Key="Muted">#777777</Color>
            <Color x:Key="Highlight">#E7E7E7</Color>
            <Color x:Key="HeaderBackground">#3C4E52</Color>

            <SolidColorBrush x:Key="InkBrush" Color="{StaticResource Ink}" />
            <SolidColorBrush x:Key="PaperBrush" Color="{StaticResource Paper}" />
            <SolidColorBrush x:Key="PanelBrush" Color="{StaticResource Panel}" />
            <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}" />
            <SolidColorBrush x:Key="AccentSoftBrush" Color="{StaticResource AccentSoft}" />
            <SolidColorBrush x:Key="MutedBrush" Color="{StaticResource Muted}" />
            <SolidColorBrush x:Key="HighlightBrush" Color="{StaticResource Highlight}" />
            <SolidColorBrush x:Key="HeaderBrush" Color="{StaticResource HeaderBackground}" />

            <Style TargetType="Window">
                <Setter Property="Background" Value="{StaticResource PaperBrush}" />
                <Setter Property="FontFamily" Value="Segoe UI" />
                <Setter Property="Foreground" Value="{StaticResource InkBrush}" />
            </Style>

            <Style x:Key="ControlButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="Foreground" Value="{StaticResource InkBrush}" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="BorderBrush" Value="#E0E0E0" />
                <Setter Property="Padding" Value="8,4" />
                <Setter Property="Margin" Value="2" />
                <Setter Property="Background" Value="White" />
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#F5F5F5" />
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="ActionButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource AccentBrush}" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="Padding" Value="16,6" />
                <Setter Property="FontWeight" Value="SemiBold" />
                <Setter Property="BorderThickness" Value="0" />
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Opacity" Value="0.9" />
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style TargetType="Slider">
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>

            <Style TargetType="TextBox">
                <Setter Property="Padding" Value="4" />
                <Setter Property="BorderBrush" Value="#E0E0E0" />
            </Style>

            <Style TargetType="Paragraph">
                <Setter Property="LineHeight" Value="24" />
                <Setter Property="Margin" Value="0" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
